@model IEnumerable<DA.Models.NguoiThue>

@{
    ViewData["Title"] = "Index";
}
@{
    Layout = "_ChuLayout";
}
<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HoTen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CCCD)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SoDienThoai)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiaChi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TaiKhoan)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HoTen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CCCD)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoDienThoai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaChi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TaiKhoan.LoaiTaiKhoan)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MaNguoiThue">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MaNguoiThue">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MaNguoiThue">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

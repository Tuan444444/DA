@model DA.ViewModels.RegisterViewModel

<h2>Đăng ký</h2>

<form asp-action="Register" method="post">
    <div>
        <label>Loại tài khoản:</label>
        <select asp-for="VaiTro" id="roleSelect" class="form-select">
            <option value="">-- Chọn --</option>
            <option value="ChuNha">Chủ nhà</option>
            <option value="NguoiThue">Người thuê</option>
        </select>
    </div>

    <div>
        <label>Tên đăng nhập:</label>
        <input asp-for="TenDangNhap" class="form-control" />
    </div>

    <div>
        <label>Mật khẩu:</label>
        <input asp-for="MatKhau" type="password" class="form-control" />
    </div>

    <div id="maChuNhaField" style="display:none;">
        <label>Mã Chủ nhà:</label>
        <input asp-for="MaChuNha" class="form-control" />
    </div>

    <div id="maNguoiThueField" style="display:none;">
        <label>Mã Người thuê:</label>
        <input asp-for="MaNguoiThue" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Đăng ký</button>
</form>

@section Scripts {
    <script>
        const select = document.getElementById("roleSelect");
        const maChuNha = document.getElementById("maChuNhaField");
        const maNguoiThue = document.getElementById("maNguoiThueField");

        select.addEventListener("change", () => {
            if (select.value === "ChuNha") {
                maChuNha.style.display = "block";
                maNguoiThue.style.display = "none";
            } else if (select.value === "NguoiThue") {
                maChuNha.style.display = "none";
                maNguoiThue.style.display = "block";
            } else {
                maChuNha.style.display = "none";
                maNguoiThue.style.display = "none";
            }
        });
    </script>
}

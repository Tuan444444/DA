    <meta name="viewport" content="width=device-width, initial-scale=1">

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', sans-serif;
        }

        body {
            background-color: #f5f5f5;
        }

        /* ========== NAVBAR ========== */
        .navbar {
            background-color: #fff;
            padding: 15px 30px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            box-shadow: 0 2px 6px rgba(0,0,0,0.1);
        }

        .logo {
            font-size: 20px;
            font-weight: bold;
            color: #003366;
        }

        .menu {
            display: flex;
            gap: 24px;
        }

            .menu a {
                text-decoration: none;
                color: #222;
                font-size: 15px;
            }

        .actions a {
            text-decoration: none;
            color: #0055cc;
            margin-left: 16px;
            font-weight: 500;
        }

        /* ========== HERO ========== */
        .hero {
            display: flex;
            flex-wrap: wrap;
            align-items: center;
            justify-content: space-between;
            padding: 60px 40px;
            background: linear-gradient(to bottom, #0a1850, #0046d6);
            color: white;
        }

        .hero-content {
            flex: 1 1 400px;
        }

        .hero h1 {
            font-size: 36px;
            font-weight: bold;
            margin-bottom: 16px;
        }

        .hero p {
            font-size: 16px;
            line-height: 1.6;
            margin-bottom: 24px;
        }

        .tabs {
            display: flex;
            gap: 10px;
            margin-bottom: 24px;
            flex-wrap: wrap;
        }

            .tabs button {
                padding: 10px 16px;
                border: none;
                border-radius: 8px;
                background-color: #cfe2ff;
                color: #003366;
                font-weight: 500;
                cursor: pointer;
            }

            .tabs .active {
                background-color: #003ba5;
                color: white;
            }

        .hero-image {
            flex: 1 1 300px;
            text-align: center;
            margin-top: 20px;
        }

            .hero-image img {
                max-width: 100%;
                height: auto;
            }

        /* ========== SEARCH WRAPPER ========== */
        .search-wrapper {
            padding: 30px 40px;
            background-color: #f8f9fb;
            display: flex;
            justify-content: center;
        }

        .search-box {
            background-color: #ffffff;
            padding: 16px;
            border-radius: 12px;
            display: flex;
            flex-wrap: wrap;
            gap: 12px;
            align-items: center;
            box-shadow: 0 2px 6px rgba(0,0,0,0.1);
            max-width: 1000px;
            width: 100%;
        }

            .search-box input,
            .search-box select {
                padding: 10px 12px;
                border-radius: 6px;
                border: 1px solid #ccc;
                min-width: 150px;
                font-size: 14px;
                flex: 1;
            }

                .search-box input::placeholder {
                    color: #999;
                }

            .search-box .search-btn {
                background-color: #ff5a00;
                color: white;
                padding: 10px 18px;
                border: none;
                border-radius: 6px;
                font-weight: bold;
                cursor: pointer;
                flex-shrink: 0;
            }


        .hot-places {
            padding: 40px 20px;
        }

        .section-title {
            font-size: 24px;
            font-weight: bold;
            color: #1a237e;
            margin-bottom: 24px;
        }

        .places-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
            gap: 20px;
        }

        .place-card {
            background: #fff;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            transition: transform 0.2s;
        }

            .place-card:hover {
                transform: translateY(-5px);
            }

        .image-wrapper {
            position: relative;
        }

            .image-wrapper img {
                width: 100%;
                height: 180px;
                object-fit: cover;
            }

        .hot-badge {
            position: absolute;
            top: 10px;
            left: 10px;
            background: red;
            color: white;
            font-weight: bold;
            font-size: 12px;
            padding: 4px 8px;
            border-radius: 4px;
        }

        .place-title {
            font-size: 16px;
            font-weight: bold;
            margin: 12px;
            height: 40px;
            overflow: hidden;
        }

        .price {
            color: #555;
            margin: 0 12px;
            font-size: 14px;
        }

            .price span {
                color: #f60;
                font-weight: bold;
            }

        .meta {
            display: flex;
            gap: 8px;
            font-size: 13px;
            margin: 8px 12px;
        }

        .type, .area {
            background: #f1f1f1;
            padding: 2px 6px;
            border-radius: 4px;
        }

        .location {
            font-size: 13px;
            color: #555;
            margin: 8px 12px 16px;
        }

        .modal {
            display: none;
            position: fixed;
            z-index: 999;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
        }

        .modal-content {
            background: white;
            margin: 10% auto;
            padding: 20px;
            border-radius: 10px;
            width: 90%;
            max-width: 500px;
            position: relative;
        }

        .close-btn {
            position: absolute;
            top: 12px;
            right: 16px;
            font-size: 24px;
            font-weight: bold;
            cursor: pointer;
        }

    </style>

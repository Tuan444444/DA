@model DA.ViewModels.RegisterViewModel
@{
    ViewBag.Title = "Đăng ký";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="col-md-6 mx-auto">
        <div class="card shadow rounded-4">
            <div class="card-header bg-success text-white text-center">
                <h4>Đăng ký tài khoản</h4>
            </div>
            <div class="card-body">
                <form asp-action="Register" method="post">
                    <div class="mb-3">
                        <label class="form-label">Loại tài khoản</label>
                        <select asp-for="VaiTro" class="form-select" id="roleSelect">
                            <option value="">-- Chọn vai trò --</option>
                            <option value="ChuNha">Chủ nhà</option>
                            <option value="NguoiThue">Người thuê</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label asp-for="HoTen" class="form-label"></label>
                        <input asp-for="HoTen" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="SDT" class="form-label"></label>
                        <input asp-for="SDT" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control" />
                    </div>

                    <div class="mb-3" id="diaChiGroup" style="display:none;">
                        <label asp-for="DiaChi" class="form-label"></label>
                        <input asp-for="DiaChi" class="form-control" />
                    </div>

                    <div class="mb-3" id="cccdGroup" style="display:none;">
                        <label asp-for="CCCD" class="form-label"></label>
                        <input asp-for="CCCD" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="TenDangNhap" class="form-label"></label>
                        <input asp-for="TenDangNhap" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="MatKhau" class="form-label"></label>
                        <input asp-for="MatKhau" class="form-control" type="password" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="XacNhanMatKhau" class="form-label"></label>
                        <input asp-for="XacNhanMatKhau" class="form-control" type="password" />
                    </div>

                    <button type="submit" class="btn btn-success w-100">Đăng ký</button>
                </form>
            </div>
        </div>
    </div>
</div>
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success mt-3">
        @TempData["SuccessMessage"]
    </div>
}
@section Scripts {
    <script>
        const roleSelect = document.getElementById("roleSelect");
        const diaChiGroup = document.getElementById("diaChiGroup");
        const cccdGroup = document.getElementById("cccdGroup");

        roleSelect.addEventListener("change", function () {
            diaChiGroup.style.display = roleSelect.value === "ChuNha" ? "block" : "none";
            cccdGroup.style.display = roleSelect.value === "NguoiThue" ? "block" : "none";
        });
    </script>
}

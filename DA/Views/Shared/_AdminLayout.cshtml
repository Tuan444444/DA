<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
            background-color: #f8f9fa;
        }

        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            width: 240px;
            height: 100vh;
            background-color: #212529;
            color: #fff;
            padding: 20px;
        }

            .sidebar .logo {
                font-size: 1.5rem;
                font-weight: bold;
                margin-bottom: 30px;
                display: flex;
                align-items: center;
                gap: 10px;
            }

            .sidebar a {
                color: #adb5bd;
                text-decoration: none;
                display: block;
                padding: 10px 15px;
                border-radius: 5px;
                margin-bottom: 10px;
                transition: all 0.2s;
            }

                .sidebar a:hover {
                    background-color: #343a40;
                    color: #fff;
                }

        .content {
            margin-left: 240px;
            padding: 30px;
        }

        .sidebar .nav-title {
            font-size: 0.8rem;
            text-transform: uppercase;
            letter-spacing: 1px;
            color: #ced4da;
            margin: 20px 0 10px;
        }
    </style>
</head>
<body>

    <div class="sidebar">
        <div class="logo">
            🏠 <a href="/HomePage/Index" style="color: white; text-decoration: none;">Trang chủ</a>
        </div>

        <div class="nav-title">Quản lý</div>
        <a href="/User/Index">👥 Quản lý tài khoản</a>
        <a href="/Reports/Index">📊 Báo cáo thống kê</a>
    </div>

    <div class="content">
        @RenderBody()
    </div>

</body>
</html>

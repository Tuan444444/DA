@model Phong

<h2>Sửa Phòng</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="MaPhong" />

    <div>
        <label>Tên Phòng</label>
        <input asp-for="TenPhong" />
    </div>
    <div>
        <label>Loại Phòng</label>
        <input asp-for="LoaiPhong" />
    </div>
    <div>
        <label>Giá Phòng</label>
        <input asp-for="GiaPhong" />
    </div>
    <div>
        <label>Diện Tích</label>
        <input asp-for="DienTich" />
    </div>
    <div>
        <label>Trạng Thái</label>
        <input asp-for="TrangThai" />
    </div>

    <div>
        <label>Chọn Dịch Vụ:</label><br />
        @foreach (var dv in ViewBag.DichVus)
        {
            bool checkedDv = ((List<int>)ViewBag.SelectedDichVus).Contains(dv.MaDichVu);
            <input type="checkbox" name="selectedDichVus" value="@dv.MaDichVu" @(checkedDv ? "checked" : "") /> @dv.TenDichVu <br />
        }
    </div>

    <button type="submit">Cập nhật</button>
    <a asp-action="Index">Quay lại</a>
</form>

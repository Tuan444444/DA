@model IEnumerable<DA.Models.HoaDon>

@{
    ViewData["Title"] = "Danh sách Hóa Đơn";
    Layout = "~/Views/Shared/_ChuLayout.cshtml";
}

<h2>Danh sách Hóa Đơn</h2>

<a href="/QLHoaDon/Create" class="btn btn-primary mb-3">Tạo Hóa Đơn Mới</a>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>Mã HĐ</th>
            <th>Mã Hợp Đồng</th>
            <th>Ngày Lập</th>
            <th>Tổng Tiền</th>
            <th>Trạng Thái</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaHoaDon</td>
                <td>@item.MaHopDong</td>
                <td>@item.NgayLap.ToString("dd/MM/yyyy")</td>
                <td>@item.TongTien.ToString("N0") VNĐ</td>
                <td>@item.TrangThaiThanhToan</td>
                <td>
                    <a class="btn btn-sm btn-info" href="/QLHoaDon/Details/@item.MaHoaDon">Xem</a>
                    <a class="btn btn-sm btn-success" href="/QLHoaDon/ExportToWord/@item.MaHoaDon">Xuất Word</a>
                </td>
            </tr>
        }
    </tbody>
</table>

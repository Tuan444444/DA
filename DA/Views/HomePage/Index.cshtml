        document.querySelectorAll(".place-card").forEach(card => {
          card.addEventListener("click", () => {
            const title = card.querySelector(".place-title")?.innerText || "Không rõ";
            const price = card.querySelector(".price span")?.innerText || "Không rõ";
            const type = card.querySelector(".type")?.innerText || "Không rõ";
            const area = card.querySelector(".area")?.innerText || "Không rõ";
            const location = card.querySelector(".location")?.innerText || "Không rõ";
            const imgSrc = card.querySelector("img")?.src || "";

            document.getElementById("modal-title").innerText = title;
            document.getElementById("modal-price").innerText = price;
            document.getElementById("modal-type").innerText = type;
            document.getElementById("modal-area").innerText = area;
            document.getElementById("modal-location").innerText = location;
            document.getElementById("modal-img").src = imgSrc;

            modal.style.display = "block";
          });
        });

        closeBtn.onclick = () => modal.style.display = "none";
        window.onclick = (e) => {
          if (e.target === modal) modal.style.display = "none";
        };
    </script>

   
